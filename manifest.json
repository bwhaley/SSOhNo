{
  "manifest_version": 3,
  "name": "Auto-click Multiple Buttons",
  "version": "1.0",
  "description": "Automatically clicks on buttons with specified ids if they appear on the page.",
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ]
}
